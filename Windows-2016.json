{
  "variables": {
    "artifact_name": "Windows-2016",

    "iso_url": "http://care.dlservice.microsoft.com/dl/download/1/6/F/16FA20E6-4662-482A-920B-1A45CF5AAE3C/14393.0.160715-1616.RS1_RELEASE_SERVER_EVAL_X64FRE_EN-US.ISO",
    "iso_checksum": "3bb1c60417e9aeb3f4ce0eb02189c0c84a1c6691",
    "iso_checksum_type": "sha1",

    "Autounattend_virtualbox": "virtualbox/Autounattend.xml",
    "Autounattend_vmware": "vmware/Autounattend.xml",
    "Autounattend_parallels": "parallels/Autounattend.xml",

    "guest_os_type_virtualbox": "Windows2012_64",
    "guest_os_type_vmware": "windows9srv-64",
    "guest_os_type_parallels": "win-2016",

    "cpu_cores": "2",
    "memory_size": "4096",
    "disk_size": "51200",

    "boot_wait": "1m",

    "communicator": "winrm",
    "winrm_use_ssl": "false",
    "winrm_insecure": "true",
    "winrm_username": "vagrant",
    "winrm_password": "vagrant",
    "winrm_timeout": "5h",

    "shutdown_timeout": "30m",
    "shutdown_command": "A:/shutdown-packer.bat"
  },

  "builders": [
    {
      "type": "virtualbox-iso",

      "headless": true,
      "guest_additions_mode": "attach",
      "guest_os_type": "{{user `guest_os_type_virtualbox`}}",
      "vm_name": "tmp-{{user `artifact_name`}}",
      "output_directory": "packer_tmp-{{user `artifact_name`}}-virtualbox",

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpu_cores`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory_size`}}"],
        ["modifyvm", "{{.Name}}", "--vram", "48" ],
        ["modifyvm", "{{.Name}}", "--cpuexecutioncap", "95"],
        ["modifyvm", "{{.Name}}", "--usb", "off"],
        ["modifyvm", "{{.Name}}", "--audio", "none"],
        ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"],
        ["modifyvm", "{{.Name}}", "--vrde", "off"]
      ],

      "hard_drive_interface": "sata",
      "disk_size": "{{user `disk_size`}}",

      "floppy_files": [
        "{{user `Autounattend_virtualbox`}}",
        "scripts/enable-WinRM.ps1",
        "unattend.xml",
        "scripts/shutdown-packer.bat",
        "oracle.cer"
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "boot_wait": "{{user `boot_wait`}}",

      "communicator": "{{user `communicator`}}",
      "winrm_use_ssl": "{{user `winrm_use_ssl`}}",
      "winrm_insecure": "{{user `winrm_insecure`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",

      "shutdown_timeout": "{{user `shutdown_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}"
    },
    {
      "type": "vmware-iso",

      "headless": true,
      "vnc_disable_password": true,
      "tools_upload_path": "C:/Windows/Temp/windows.iso",
      "tools_upload_flavor": "windows",
      "guest_os_type": "{{user `guest_os_type_vmware`}}",
      "vm_name": "tmp-{{user `artifact_name`}}",
      "output_directory": "packer_tmp-{{user `artifact_name`}}-vmware",

      "vmx_data": {
        "numvcpus": "{{user `cpu_cores`}}",
        "memsize": "{{user `memory_size`}}",
        "scsi0.virtualDev": "lsisas1068",
        "RemoteDisplay.vnc.enabled": "false",
        "usb.present": "false",
        "sound.present": "false"
      },

      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": 0,

      "floppy_files": [
        "{{user `Autounattend_vmware`}}",
        "scripts/enable-WinRM.ps1",
        "unattend.xml",
        "scripts/shutdown-packer.bat"
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "boot_wait": "{{user `boot_wait`}}",

      "communicator": "{{user `communicator`}}",
      "winrm_use_ssl": "{{user `winrm_use_ssl`}}",
      "winrm_insecure": "{{user `winrm_insecure`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",

      "shutdown_timeout": "{{user `shutdown_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}"
    },
    {
      "type": "parallels-iso",

      "guest_os_type": "{{user `guest_os_type_parallels`}}",
      "parallels_tools_flavor": "win",
      "parallels_tools_mode": "upload",
      "parallels_tools_guest_path": "C:/Windows/Temp/win.iso",
      "vm_name": "tmp-{{user `artifact_name`}}",
      "output_directory": "packer_tmp-{{user `artifact_name`}}-parallels",

      "prlctl": [
        ["set", "{{.Name}}", "--cpus", "{{user `cpu_cores`}}"],
        ["set", "{{.Name}}", "--memsize", "{{user `memory_size`}}"],
        ["set", "{{.Name}}", "--videosize", "48"],
        ["set", "{{.Name}}", "--device-del", "usb"],
        ["set", "{{.Name}}", "--autostop", "stop"],
        ["set", "{{.Name}}", "--shf-guest", "off"]
      ],

      "hard_drive_interface": "sata",
      "disk_size": "{{user `disk_size`}}",

      "floppy_files": [
        "{{user `Autounattend_parallels`}}",
        "scripts/enable-WinRM.ps1",
        "unattend.xml",
        "scripts/shutdown-packer.bat"
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "boot_wait": "{{user `boot_wait`}}",

      "communicator": "{{user `communicator`}}",
      "winrm_use_ssl": "{{user `winrm_use_ssl`}}",
      "winrm_insecure": "{{user `winrm_insecure`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",

      "shutdown_timeout": "{{user `shutdown_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}"
    }
  ],

  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "scripts/install-GuestTools.ps1",
        "scripts/postInstall.ps1",
        "scripts/postSetup.ps1"
      ]
    }
  ],

  "post-processors": [
    {
      "output": "{{user `artifact_name`}}-{{.Provider}}.box",
      "type": "vagrant"
    }
  ]

}
